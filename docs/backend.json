
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's basic profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "The email of the user."
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        }
      }
    },
    "Address": {
      "title": "Shipping Address",
      "description": "Represents a user's shipping address.",
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string",
          "description": "The full name for the recipient."
        },
        "address": {
          "type": "string",
          "description": "The street address."
        },
        "city": {
          "type": "string",
          "description": "The city."
        },
        "postalCode": {
          "type": "string",
          "description": "The postal code."
        },
        "country": {
          "type": "string",
          "description": "The country."
        },
        "isDefault": {
          "type": "boolean",
          "description": "Whether this is the default shipping address."
        }
      },
      "required": ["fullName", "address", "city", "postalCode", "country"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents an order placed by a user.",
      "type": "object",
      "properties": {
        "orderDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the order was placed."
        },
        "total": {
          "type": "number",
          "description": "The total amount of the order."
        },
        "status": {
          "type": "string",
          "enum": ["Pending", "Shipped", "Delivered", "Cancelled"],
          "description": "The status of the order."
        },
        "shippingAddress": {
          "$ref": "#/entities/Address"
        },
        "paymentMethod": {
          "type": "string",
          "description": "The payment method used."
        }
      },
      "required": ["orderDate", "total", "status", "shippingAddress"]
    },
    "OrderItem": {
      "title": "Order Item",
      "description": "Represents a single item within an order.",
      "type": "object",
      "properties": {
        "productId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "quantity": {
          "type": "number"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "selectedSize": {
          "type": "string"
        },
        "selectedColor": {
          "type": "string"
        }
      },
      "required": ["productId", "name", "price", "quantity"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores basic user profile information, keyed by user ID."
    },
    "/users/{userId}/addresses/{addressId}": {
      "schema": {
        "$ref": "#/entities/Address"
      },
      "description": "Stores a user's shipping addresses as a subcollection."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/Order"
      },
      "description": "Stores orders for a specific user."
    },
    "/users/{userId}/orders/{orderId}/items/{itemId}": {
      "schema": {
        "$ref": "#/entities/OrderItem"
      },
      "description": "Stores the items for a specific order."
    }
  }
}
